#include <iostream>

using namespace std;



int main()
{
    char c;
    int inicio = 0,fin = 100, n = 50;
    bool adivine = true;

    while(adivine){
        cout << "El numero es: "<<n<<" Â¿Es >, es < o = ? : "   <<endl;
        cin >> c;
        switch(c){
            case '>':
                inicio = n;
                n =  ((fin-inicio)/2)+inicio;
                break;
            case '<' :
                fin = n;
                n =  ((fin-inicio)/2)+inicio;
                break;
            case '=' :
                adivine = false;
                cout << "Adivine el numero es: "<<n<<endl;
                break;
            default:
                cout << "Ingrese un caracter valido" <<endl;
                break;
        }

    }

    return 0;
}
